{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "run-s build:packages build:ts",
    "build:packages": "lerna --no-private run --parallel build",
    "build:ts": "tsc -b packages",
    "dev": "run-p dev:packages dev:ts",
    "dev:packages": "lerna --no-private run --parallel dev",
    "dev:ts": "tsc -b packages --watch --preserveWatchOutput",
    "lint": "run-p lint:packages lint:tests",
    "lint:packages": "lerna run --no-bail lint",
    "lint:tests": "tslint --project .",
    "prepublishOnly": "yarn build",
    "test": "jest",
    "web:build": "yarn workspace @dota-data/web build",
    "web:dev": "yarn workspace @dota-data/web dev"
  },
  "prettier": {
    "printWidth": 100,
    "proseWrap": "always",
    "singleQuote": true,
    "trailingComma": "all"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.[jt]s?(x)",
      "!**/_*"
    ]
  },
  "devDependencies": {
    "@ark120202/tslint-config": "3.0.0",
    "@ark120202/typescript-config": "^1.5.0",
    "@types/fs-extra": "^5.0.5",
    "@types/jest": "^24.0.11",
    "@types/lodash": "^4.14.122",
    "@types/prettier": "^1.16.1",
    "jest": "^24.3.1",
    "lerna": "^3.13.1",
    "nodemon": "^1.18.9",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.16.4",
    "ts-jest": "^23.10.4",
    "ts-node": "^8.0.3",
    "tslint": "^5.13.1",
    "tslint-react": "^3.6.0",
    "typescript": "^3.4.0-dev.20190202",
    "typescript-styled-plugin": "^0.13.0",
    "typescript-tslint-plugin": "^0.3.1"
  }
}
