{
  "name": "dota-data",
  "version": "0.9.6",
  "description": "Auto-generated Dota 2 resource dumps",
  "repository": "https://github.com/ark120202/dota-data",
  "license": "Apache-2.0",
  "author": "ark120202",
  "files": [
    "lib/**/*.{js,ts}",
    "files/**/*.{json,ts}"
  ],
  "scripts": {
    "build": "run-s build:clean build:static build:tsc",
    "build:clean": "rimraf \"{files,lib}/**/*\"",
    "build:static": "ts-node build",
    "build:tsc": "tsc",
    "dev": "run-p dev:static dev:tsc",
    "dev:static": "nodemon",
    "dev:tsc": "tsc --watch --preserveWatchOutput",
    "lint": "run-p lint:prettier lint:eslint",
    "lint:eslint": "eslint . --ext .js,.ts,.tsx",
    "lint:prettier": "prettier --check **/*.{ts,tsx,js,md,yml,json}",
    "prepublishOnly": "yarn build",
    "test": "jest"
  },
  "nodemonConfig": {
    "exec": "ts-node --transpile-only build",
    "ext": "ts,json",
    "watch": [
      "build",
      "src/schema",
      "src/schemas",
      "dumper/dump"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "proseWrap": "always",
    "singleQuote": true,
    "trailingComma": "all"
  },
  "eslintConfig": {
    "extends": "@ark120202/eslint-config/node",
    "parserOptions": {
      "project": [
        "tsconfig.json",
        "build/tsconfig.json",
        "__tests__/tsconfig.json"
      ]
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.[jt]s?(x)",
      "!**/_*"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "<rootDir>/__tests__/tsconfig.json"
      }
    }
  },
  "dependencies": {
    "fs-extra": "^8.1.0",
    "got": "^10.0.1",
    "lodash": "^4.17.15",
    "tslib": "^1.10.0",
    "vdf-extra": "^2.2.2"
  },
  "devDependencies": {
    "@ark120202/eslint-config": "^2.2.0",
    "@ark120202/typescript-config": "^2.1.0",
    "@types/dedent": "^0.7.0",
    "@types/fs-extra": "^8.0.1",
    "@types/jest": "^24.0.23",
    "@types/lodash": "^4.14.149",
    "@types/prettier": "^1.19.0",
    "dedent": "^0.7.0",
    "eslint": "^6.7.2",
    "jest": "^24.9.0",
    "nodemon": "^2.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "ts-jest": "^24.2.0",
    "ts-node": "^8.5.4",
    "typescript": "^3.7.3"
  }
}
