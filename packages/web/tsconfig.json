{
  "extends": "@ark120202/typescript-config/web/es2017.json",
  "compilerOptions": {
    "jsx": "react",
    "noEmit": true,
    "isolatedModules": true,
    "plugins": [
      { "name": "typescript-tslint-plugin", "ignoreDefinitionFiles": true },
      { "name": "typescript-styled-plugin" }
    ],

    "baseUrl": "src",
    "paths": {
      "~components/*": ["components/*"],
      "~utils/*": ["utils/*"]
    }
  },
  "references": [{ "path": "../dota-data" }]
}
